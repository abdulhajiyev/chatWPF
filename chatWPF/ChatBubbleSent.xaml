<UserControl
    x:Class="chatWPF.ChatBubbleSent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="10,12"
            HorizontalAlignment="Right"
            Background="#375FFF"
            CornerRadius="15,15,0,15">
            <TextBlock
                Name="TextBlockSent"
                Margin="15"
                HorizontalAlignment="Right"
                Foreground="White"
                Text="Lorem ipLorem ipLorem ipLorem ipLorem ipLorem ipLorem ipLorem ip."
                TextWrapping="Wrap" />
        </Border>
        <TextBlock
            Name="TimeSent"
            Margin="10,0,10,0"
            Padding="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="10"
            Foreground="White"
            ScrollViewer.CanContentScroll="True"
            Text="Thu 5:45PM" />
    </Grid>
</UserControl>
